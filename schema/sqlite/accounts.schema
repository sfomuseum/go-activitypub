CREATE TABLE accounts (
       id INTEGER PRIMARY KEY,
       name TEXT,
       display_name TEXT,
       blurb TEXT,
       url TEXT,
       private_key_uri TEXT,
       public_key_uri TEXT,
       created INTEGER,
       lastmodified INTEGER
);

CREATE UNIQUE INDEX `accounts_by_name` ON accounts (`name`);
CREATE INDEX `accounts_by_created` ON ACCOUNTS (`created`);