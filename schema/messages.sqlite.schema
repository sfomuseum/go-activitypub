CREATE TABLE messages (
       id TEXT PRIMARY KEY,
       account_id TEXT,
       author_id TEXT,
       body TEXT,
       created INTEGER,
       lastmodified INTEGER
);

CREATE INDEX `messages_by_account` ON posts (`account_id`, `created`);
CREATE INDEX `messages_by_account_author` ON posts (`account_id`, `author_id`, `created`);
CREATE INDEX `messages_by_author` ON posts (`author_id`, `created`);
CREATE INDEX `messages_by_created` ON posts (`created`);
       